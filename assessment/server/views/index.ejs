<html>

<head>
  <title>Star Wars People</title>
  <link href='https://fonts.googleapis.com/css?family=Poller One' rel='stylesheet'>
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/module.css" />
  <script id="star-wars" type="text/x-handlebars-template">
    <div class="character">
      <header>
        <h2>{{name}}</h2>
      </header>
        <span>{{likes}}</span>
          <button class="up">Upvote</button>
    </div>
  </script>
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <canvas id="space"></canvas>
  <main>
    <section class="characters">

      <% for(let x = 0; x < results.length; x++) { %>
      <div class="character">
        <header>
          <h2><%= results[x].name %></h2>
        </header>
        <span><%= results[x].likes || 0 %></span>
        <button class="up">Upvote</button>
      </div>
      <% } %>
    </section>
    <section id="character"></section>
    <button class="get-more">Get More Characters</button>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.10/handlebars.js"></script>
  <script src="/js/app.js"></script>
  <script src="./js/background.js"></script>
</body>

</html>